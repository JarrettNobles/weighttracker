<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Top bar with title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/background_light"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />
    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Settings card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <!-- Goal Weight -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_goal_weight"
                            style="@style/LabelText"
                            android:layout_marginBottom="0dp" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_info"
                            android:layout_marginStart="6dp"
                            android:contentDescription="Goal weight info" />
                    </LinearLayout>

                    <!-- Goal Weight input + unit -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_selector"
                        android:layout_marginTop="6dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <EditText
                            android:id="@+id/et_goal_weight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="@string/hint_goal_weight"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:inputType="numberDecimal"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no"
                            tools:text="70.0" />

                        <TextView
                            android:id="@+id/tv_goal_weight_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_kg"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Goal weight info text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goal_weight_info"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif" />

                    <!-- Goal Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_goal_date"
                        style="@style/LabelText"
                        android:layout_marginTop="20dp" />

                    <!-- Goal Date picker field with dropdown arrow -->
                    <LinearLayout
                        android:id="@+id/ll_goal_date"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_border"
                        android:layout_marginTop="6dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tv_goal_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select date"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif"
                            tools:text="Dec 31, 2024" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_dropdown"
                            android:contentDescription="Pick goal date" />
                    </LinearLayout>

                    <!-- Gender -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_gender"
                        style="@style/LabelText"
                        android:layout_marginTop="20dp" />

                    <!-- Gender spinner -->
                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/input_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:spinnerMode="dropdown"
                        tools:text="Female" />

                    <!-- Height -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_height"
                        style="@style/LabelText"
                        android:layout_marginTop="20dp" />

                    <!-- Height input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_selector"
                        android:layout_marginTop="6dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <EditText
                            android:id="@+id/et_height"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="@string/hint_height"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:inputType="numberDecimal"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no"
                            tools:text="166" />

                        <TextView
                            android:id="@+id/tv_height_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cm"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Beginning Weight -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_beginning_weight"
                        style="@style/LabelText"
                        android:layout_marginTop="20dp" />

                    <!-- Beginning weight input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_selector"
                        android:layout_marginTop="6dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <EditText
                            android:id="@+id/et_beginning_weight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="@string/hint_beginning_weight"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:inputType="numberDecimal"
                            android:fontFamily="sans-serif"
                            android:importantForAutofill="no"
                            tools:text="170.0" />

                        <TextView
                            android:id="@+id/tv_beginning_weight_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_kg"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Unit Preferences card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_unit_preferences"
                        style="@style/LabelText"
                        android:layout_marginBottom="12dp" />

                    <!-- Imperial radio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/radio_imperial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_red"
                            android:text="@string/label_imperial"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Metric radio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/radio_metric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_red"
                            android:text="@string/label_metric"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif"
                            android:checked="true" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Settings button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_save_settings"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/btn_primary_red"
                    android:text="@string/btn_save_settings"
                    android:textColor="@color/card_white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
