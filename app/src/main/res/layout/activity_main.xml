<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Main scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp">

        <!-- Top header bar with title and settings gear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@color/background_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/main_title"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <ImageButton
                    android:id="@+id/btn_settings_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Settings"
                    android:src="@drawable/ic_settings" />
            </LinearLayout>

            <!-- Main card: current weight display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="36dp"
                    android:paddingBottom="28dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <!-- Large weight number -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tv_current_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="72sp"
                            android:textColor="@color/primary_red"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"
                            tools:text="155.0" />

                        <TextView
                            android:id="@+id/tv_weight_unit_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_kg"
                            android:textSize="28sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="12dp"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif-medium"
                            tools:text="kg" />
                    </LinearLayout>

                    <!-- Last entry info -->
                    <TextView
                        android:id="@+id/tv_last_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"
                        tools:text="LAST ENTRY, NOV 20, 2023" />

                    <!-- Change info -->
                    <TextView
                        android:id="@+id/tv_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/primary_red"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="2dp"
                        tools:text="CHANGE: -2.5 KG" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats card: BMI, Avg Weekly Loss, Loss to Date -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- BMI -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_bmi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="22sp"
                            android:textColor="@color/primary_red"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            tools:text="28.4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMI"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/border_light" />

                    <!-- Avg Weekly Loss -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_avg_weekly_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="22sp"
                            android:textColor="@color/primary_red"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            tools:text="-0.8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg/Week"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/border_light" />

                    <!-- Loss to date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_loss_to_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="22sp"
                            android:textColor="@color/primary_red"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            tools:text="-12.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Loss"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action buttons card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Add Weight Entry + View History row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_add_weight_entry"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/btn_primary_red"
                            android:text="ADD WEIGHT\nENTRY"
                            android:textColor="@color/card_white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/btn_view_history"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/btn_primary_red"
                            android:text="VIEW HISTORY"
                            android:textColor="@color/card_white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Add Progress Photo button (outline style) -->
                    <Button
                        android:id="@+id/btn_add_progress_photo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_outline"
                        android:text="  ADD PROGRESS PHOTO"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_camera"
                        android:drawablePadding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tip card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tip_morning_weight"
                            style="@style/TipCardText" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_got_it"
                        android:layout_width="120dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_outline"
                        android:text="@string/btn_got_it"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom navigation bar (fixed at bottom) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:elevation="4dp">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/nav_selected" />

            <TextView
                android:id="@+id/nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home"
                android:textSize="10sp"
                android:textColor="@color/nav_selected"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- HISTORY -->
        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/nav_history_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                app:tint="@color/nav_unselected" />

            <TextView
                android:id="@+id/nav_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_history"
                android:textSize="10sp"
                android:textColor="@color/nav_unselected"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- SETTINGS -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/nav_settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/nav_unselected" />

            <TextView
                android:id="@+id/nav_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_settings"
                android:textSize="10sp"
                android:textColor="@color/nav_unselected"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
